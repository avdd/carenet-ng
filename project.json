{
  "ports": {
    "browse":       8088,
    "karma":        8087,
    "test":         8086,
    "vagrant":      8085,
    "livereload":  35729
  },

  "paths": {
    "client_src":     "src/client",
    "server_src":     "src/server",
    "client_assets":  "static",
    "client_test":    "test/client",
    "server_test":    "test/server",
    "ui_test":        "test/ui",
    "spec_test":      "test/spec",
    "python_env":     ".cache/python",
